{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",

    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,

    "baseUrl": ".",
    "paths": {
      "@/*": [ "./*", ]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
